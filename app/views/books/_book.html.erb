<div class="col">
  <div id="<%= dom_id book %>" class="card" style="width: 20em">
    <div class="card-body">
      <h5 class="card-title"><%= book.title %></h5>
      <p class="card-text">
        <strong><%= book.author %></strong> <br>
        <strong><%= book.genre %></strong>
      </p>
      <%= link_to 'Details', book_path(book), class: 'btn btn-primary' %>
    </div>
  </div>
</div>
