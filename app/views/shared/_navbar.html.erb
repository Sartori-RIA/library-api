<nav class="navbar bg-body-tertiary">
  <div class="container-fluid">
    <% if can? :read, Book %>
      <%= link_to 'Books', books_path, class: 'navbar-brand' %>
    <% end %>
    <% if can? :read, Borrow %>
      <%= link_to 'Borrows', borrows_path, class: 'navbar-brand' %>
    <% end %>
    <% if can? :index, :dashboard %>
      <%= link_to 'Dashboard', dashboard_path, class: 'navbar-brand' %>
    <% end %>
    <div class="d-flex">

      <% if user_signed_in? %>
        <%= link_to "Sign Out", destroy_user_session_path(action: :delete),
                    class: 'btn btn-link',
                    data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
      <% else %>
        <%= link_to "Sign In", new_user_session_path, class: 'btn btn-link' %>
      <% end %>
    </div>
  </div>
